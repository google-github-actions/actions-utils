{
  "compilerOptions": {
    "alwaysStrict": true,
    "declaration": true,
    "esModuleInterop": true,
    "lib": ["es2022"],
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "strict": true,
    "target": "es2022"
  },
  "exclude": ["dist/", "node_modules/", "tests/"],
  "typedocOptions": {
    "entryPoints": ["./src"],
    "entryPointStrategy": "expand",
    "gitRevision": "main",
    "out": "./docs"
  }
}
